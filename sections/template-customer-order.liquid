<div class="max-w-6xl mx-auto px-4 py-12">
  <div class="flext items-start md:items-end justify-between my-5">
    <div class="w-1/2">
      <h1 class="text-2xl font-bold text-gray-700">Order {{ order.name }}</h1>
      <p class="text-gray-500 my-2">{{ order.created_at |  date: format: 'date' }}</p>
      <span class="text-sm text-white bg-gray-700 rounded-full my-2 px-4 py-1">{{ order.financial_status_label }}</span>
    </div>

    <a href="{{ routes.account_url }}" class="text-blue-700 hover:text-blue-900 underline font-medium">Back to account</a>
  </div>
  <div>
    {% for linen_item in order.line_items %}
      xxxx
     <div class="w-full border border-gray-200 divided-y rounded-sm mb-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-12 p-4 md:p-12">
        <div class="w-full min-h80 bg-gray-200 rounded overflow-hidden">
          {% if line_item.image %}
            <img src="{{ line_item.image | img_url: 'medium' }}" alt="{{ line_item.image.alt }}">
          {% endif %}
        </div>
      </div>
     </div>
    {% endfor %}
  </div>
</div>
